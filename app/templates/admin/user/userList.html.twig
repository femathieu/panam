{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h1> Utilisateurs </h1>
        </div>
    </div>
        <div class="row">
            <a href="{{ path('admin_user') }}" class="btn btn-success">+ nouveau</a>
        </div>
        <div class="row">
            <div class="col-2" style="font-weight: bold">
                Nom d'utilistaeur
            </div>
            <div class="col-2" style="font-weight: bold">
                Adresse mail
            </div>
        </div>
            {% for user in users %}
                <div class="row">
                    <div class="col-2">
                        <a href="{{ path('admin_user', { 'id': user.id }) }}">{{ user.username }}</a>
                    </div>
                    <div class="col-2">
                        {{ user.email }}
                    </div>
                </div>
            {% endfor %}

{% endblock %}